<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yer_sea"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/landlubber_question"
        android:textSize="@dimen/landlubber_sized"
        android:padding="@dimen/plank_size"
        android:layout_margin="@dimen/yer_bird_size"
        android:textColor="@color/british_blood"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/yer_bird_size"
            android:backgroundTint="#00ff00"
            android:onClick="delete"
            android:textSize="@dimen/landlubber_sized" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/yer_bird_size"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:onClick="nope"
            android:textSize="@dimen/landlubber_sized" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/yer_bird_size"
            android:layout_weight="1"
            android:backgroundTint="#0000ff"
            android:onClick="delete"
            android:textSize="@dimen/landlubber_sized" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/yer_bird_size"
            android:backgroundTint="#ffff00"
            android:onClick="delete"
            android:textSize="@dimen/landlubber_sized" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/yer_bird_size"
            android:layout_weight="1"
            android:backgroundTint="#bb00bb"
            android:onClick="delete"
            android:textSize="@dimen/landlubber_sized" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/yer_bird_size"
            android:layout_weight="1"
            android:backgroundTint="#ff0000"
            android:onClick="nope"
            android:textSize="@dimen/landlubber_sized" />
    </LinearLayout>

</LinearLayout>